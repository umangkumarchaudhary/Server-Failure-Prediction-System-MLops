# PredictrAI Backend Environment Variables
# Copy this to .env and fill in your values

# ===================
# DATABASE (Supabase)
# ===================
# Get from: Supabase Dashboard → Settings → Database → Connection String
DATABASE_URL=postgresql+asyncpg://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres

# ===================
# SECURITY
# ===================
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ===================
# CORS (Your Netlify URL)
# ===================
CORS_ORIGINS=https://predictr-ai.netlify.app,http://localhost:3000

# ===================
# OPTIONAL: AI Copilot
# ===================
# For real LLM responses (otherwise uses mock)
OPENAI_API_KEY=sk-...

# ===================
# OPTIONAL: Notifications
# ===================
SLACK_WEBHOOK_URL=https://hooks.slack.com/...
SENDGRID_API_KEY=SG...

# ===================
# OPTIONAL: Ticket Systems
# ===================
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=...
